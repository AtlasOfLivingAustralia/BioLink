<UserControl x:Class="BioLink.Client.Material.MaterialLabelsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="341" d:DesignWidth="615" xmlns:my="clr-namespace:BioLink.Client.Extensibility;assembly=BioLink.Client.Extensibility">
    <Grid>
        <Label Content="Special Label Text:" Height="28" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="135" />
        <my:TextBox Height="83" Margin="12,46,12,0" Name="textBox1" VerticalAlignment="Top" Text="{Binding SpecialLabel}"/>
        <Label Content="Original Label Text:" Height="28" HorizontalAlignment="Left" Margin="12,135,0,0" Name="label2" VerticalAlignment="Top" Width="135" />
        <my:TextBox Height="94" Margin="12,169,12,0" Name="textBox2" VerticalAlignment="Top" Text="{Binding OriginalLabel}"/>        
    </Grid>
</UserControl>
