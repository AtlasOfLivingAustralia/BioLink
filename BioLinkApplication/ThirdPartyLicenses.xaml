<Window x:Class="BioLinkApplication.ThirdPartyLicenses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Credits" Height="373" Width="733">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="36" />
        </Grid.RowDefinitions>

        <TextBlock Name="textBlock1" Margin="6">
            <TextBlock.Text>BioLink is made possible through the use of a number of other open source software projects.</TextBlock.Text>
        </TextBlock>

        <ScrollViewer Grid.Row="1" Margin=" 6">
            <StackPanel Orientation="Vertical" x:Name="credits">
            </StackPanel>
        </ScrollViewer>
        
        <Grid Grid.Row="2" Background="{x:Static SystemColors.ControlBrush}" >
            <Button Content="_OK" Height="23" HorizontalAlignment="Right" Margin="0,7,6,0" Name="button1" VerticalAlignment="Top" Width="75" IsCancel="True" IsDefault="True" />
        </Grid>
        
    </Grid>
</Window>
