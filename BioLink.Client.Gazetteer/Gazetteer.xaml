<UserControl x:Class="BioLink.Client.Gazetteer.Gazetteer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:BioLink.Client.Gazetteer"
             mc:Ignorable="d" 
             d:DesignHeight="501" d:DesignWidth="460" xmlns:my="clr-namespace:BioLink.Client.Extensibility;assembly=BioLink.Client.Extensibility">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="StringResources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <Label Content="{StaticResource Gazetteer.SelectFile}" Height="28" Name="lblFile" VerticalAlignment="Top" Margin="12,7,99,0" />
        <Button Content="{StaticResource Gazetteer.btnOpen}" Height="23" Margin="0,8,12,0" Name="btnOpen" VerticalAlignment="Top" HorizontalAlignment="Right" Width="81" Click="btnOpen_Click" />
        <ListBox Margin="12,76,12,230" Name="lstResults">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type src:PlaceName}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Path=Division, StringFormat='[{0}]  '}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=Name}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=PlaceType, StringFormat=' - {0}'}" VerticalAlignment="Center" />                        
                        <TextBlock Text="{Binding Path=LatitudeString, StringFormat='  ({0},'}" VerticalAlignment="Center" />
                        <TextBlock Text="{Binding Path=LongitudeString, StringFormat=' {0})'}" VerticalAlignment="Center" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.Resources>
        </ListBox>
        <Label Content="{StaticResource Gazetteer.Find}" Height="23" HorizontalAlignment="Left" Margin="12,41,0,0" Name="label2" VerticalAlignment="Top" Width="73" HorizontalContentAlignment="Right" />
        <my:DelayedTriggerTextbox Margin="91,42,241,0" Name="txtFind" VerticalAlignment="Top" TypingPaused="delayedTriggerTextbox1_TypingPaused" TextChanged="delayedTriggerTextbox1_TextChanged" KeyUp="delayedTriggerTextbox1_KeyUp"/>
        <Label Content="" Margin="12,0,12,204" Name="lblResults" Height="28" VerticalAlignment="Bottom" />
        <CheckBox Content="{StaticResource Gazetteer.chkLimit}" Height="18" HorizontalAlignment="Right" Margin="0,46,131,0" Name="chkLimit" VerticalAlignment="Top" Width="104" Checked="chkLimit_Checked" Unchecked="chkLimit_Unchecked" />
        <ComboBox Height="23" Margin="0,41,12,0" Name="cmbDivision" VerticalAlignment="Top" HorizontalAlignment="Right" Width="120" IsEnabled="False" SelectionChanged="cmbDivision_SelectionChanged" />
    </Grid>
</UserControl>
