<UserControl x:Class="BioLink.Client.Extensibility.ReportResults"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:BioLink.Client.Extensibility"
             mc:Ignorable="d" d:DesignHeight="229" d:DesignWidth="521">
    <Grid>
        
        <Grid.RowDefinitions>            
            <RowDefinition />
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" x:Name="reportContent"></Grid>
        
        <StatusBar Grid.Row="1" Height="23" Name="statusBar" VerticalAlignment="Bottom">
            <StatusBarItem DockPanel.Dock="Right">
                <ProgressBar x:Name="progressBar" Minimum="0" Maximum="100" Value="0" Width="160" Height="16" HorizontalAlignment="Right" VerticalAlignment="Center" HorizontalContentAlignment="Left" />
            </StatusBarItem>
            <StatusBarItem>
                <TextBlock x:Name="statusMessage" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
</UserControl>
